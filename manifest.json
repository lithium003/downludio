{
  "manifest_version": 3,
  "name": "Downludio",
  "version": "2.0",
  "description": "Click to download the currently playing (or paused) audio from Udio.",
  "permissions": ["scripting", "activeTab", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*.udio.com/*"
  ],
  "action": {
    "default_title": "Download Udio Audio"
  }
}
